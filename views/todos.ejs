<%- include('partials/header'); -%> <% if(message==="ok" ) { %>
<div id="message" class="ok">
  Logged in as <%= user.name.firstName + " " + user.name.lastName %>!
</div>
<% } %>

<div class="form">
  <h2>Add a to-do</h2>
  <form id="todoAdd">
    <label for="title">Title</label>
    <input type="text" name="title" required />
    <label for="body">Body</label>
    <input type="text" name="body" required />
    <button>Add</button>
  </form>
</div>

<div class="todos">
  <% if(user) { if (user.todos.length !=0) { %>
  <h2 id="todoHeader">Your Todos:</h2>
  <% user.todos.forEach(todo=> { %>
  <div class="todo">
    <img src="/todo.png" alt="todo list" />
    <h4><%= todo.title %></h4>
    <p><%= todo.body %></p>
    <button class="delete" data-id="<%= todo._id %>">Remove</button>
  </div>
  <% }) %> <% } else { %>
  <h2 id="todoHeader">No todos for you now!</h2>
  <% } %> <% }%>
</div>

<%- include('partials/footer'); -%>
<script src="/scripts/todos.js"></script>
